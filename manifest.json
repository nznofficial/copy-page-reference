{
    "manifest_version": 3,
    "name": "Copy Page Reference",
    "version": "1.0.0",
    "description": "Right-click to copy page title + URL.",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Copy Page Reference",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  